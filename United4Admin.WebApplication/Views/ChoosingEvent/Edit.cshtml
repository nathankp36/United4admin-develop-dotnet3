@model United4Admin.WebApplication.ViewModels.ChoosingPartyVM

@{
    String action = ViewBag.Action;
}



<form method="post">

    <div class="form-horizontal">
        <h4>
            @action Choosing Event
        </h4>

        <div class="form-group pull-right">
            <div>
                <input type="submit" value="Save" class="btn btn-primary" /> &nbsp; &nbsp;
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
        <hr />

        &nbsp;
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="ChoosingPartyId" type="hidden" />
        <input asp-for="Create" type="hidden" />
        <div class="form-group">
            <label asp-for="HorizonId" class="control-label col-md-2"></label>
            <div class="col-md-2">
                <input asp-for="HorizonId" class="form-control" />
                <span asp-validation-for="HorizonId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PartyName" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="PartyName" class="form-control" />
                <span asp-validation-for="PartyName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Country" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PartyDate" class="control-label col-md-2"></label>
			<div class="col-md-2">
				<div class="input-group">
					<input asp-for="PartyDate" class="datePicker form-control" />
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-calendar"></span>
					</span>
					<span asp-validation-for="PartyDate" class="text-danger"></span>
				</div>
			</div>
        </div>
        <div class="form-group">
            <label asp-for="WorkflowStatusId" class="control-label col-md-2"></label>
            <div class="col-md-2">
                <select asp-for="WorkflowStatusId" class="form-control" asp-items="@(new SelectList(Model.WorkFlowStatuses,"WorkflowStatusId","WorkflowStatusLookupName"))">
                    <option value="">Please Select...</option>
                </select>
                <span asp-validation-for="WorkflowStatusId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NotesComments" class="control-label col-md-2"></label>
            <div class="col-md-6">
                <textarea asp-for="NotesComments" class="form-control"></textarea>
                <span asp-validation-for="NotesComments" class="text-danger"></span>
            </div>
        </div>



    </div>
</form>

@if (action == "Edit")
{
<div>
    <div class="control-label col-md-2"></div>
    <a asp-action="Delete" asp-route-Id="@Model.ChoosingPartyId" class="btn btn-danger">Delete</a>

</div>
}
