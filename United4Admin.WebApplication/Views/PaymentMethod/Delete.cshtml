@model United4Admin.WebApplication.ViewModels.PaymentMethodVM

<div>
    <h4>Delete Payment Method</h4>
    <div class="alert alert-danger">Are you sure you want to remove this payment method?</div>
    <dl class="dl-horizontal">
        <dt>
            <label asp-for="ddlWvType"></label>
        </dt>
        <dd>
            @Model.ddlWvType
        </dd>
        <dt>
            <label asp-for="crmPaymentMethodName"></label>
        </dt>
        <dd>
            @Model.crmPaymentMethodName
        </dd>
        <dt>
            <label asp-for="crmPaymentMethodType"></label>
        </dt>
        <dd>
            @Model.crmPaymentMethodType
        </dd>
    </dl>

    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="control-label col-md-2"></div>
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-controller="NavisionMapping" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
