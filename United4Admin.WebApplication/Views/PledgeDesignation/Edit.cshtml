@model United4Admin.WebApplication.ViewModels.PledgeDesignationVM

@{
    String action = ViewBag.Action;
}

<form method="post">

    <div class="form-horizontal">
        <h4>
            @action Pledge and Designation
        </h4>

        <div class="form-group pull-right">
            <div>
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-controller="SimmaMapping" asp-action="Index">Back to List</a>
            </div>
        </div>
        <hr />

        &nbsp;
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="Create" type="hidden" />       
        <div class="form-group">
            <label asp-for="WvFormDescription" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <div class="input-group">
                    <input asp-for="WvFormDescription" class="form-control" />
                    <span asp-validation-for="WvFormDescription" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="WvProductVariant" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <div class="input-group">
                    @if (action == "Edit")
                    {
                        <input asp-for="WvProductVariant" class="form-control" disabled />
                    }
                    @if (action == "Create")
                    {
                        <input asp-for="WvProductVariant" class="form-control" />
                    }
                    <input asp-for="WvProductVariant" type="hidden" />
                    <span asp-validation-for="WvProductVariant" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CrmPledgeId" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <div class="input-group">
                    <input asp-for="CrmPledgeId" class="form-control" />
                    <span asp-validation-for="CrmPledgeId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CrmDesignationId" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <div class="input-group">
                    <input asp-for="CrmDesignationId" class="form-control" />
                    <span asp-validation-for="CrmDesignationId" class="text-danger"></span>
                </div>
            </div>
        </div>

    </div>
</form>

@if (action == "Edit")
{
    <div>
        <div class="control-label col-md-2"></div>
        <a asp-action="Delete" asp-route-id="@Model.WvProductVariant" class="btn btn-danger">Delete</a>
    </div>
}